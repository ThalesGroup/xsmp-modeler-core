{
	"name": "xsmp",
	"displayName": "XSMP",
	"description": "XSMP language support",
	"version": "1.1.0-rc6",
	"publisher": "ThalesAleniaSpace",
	"author": "Thales Alenia Space",
	"icon": "images/xsmp.png",
	"license": "EPL-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ThalesGroup/xsmp-modeler-core.git"
	},
	"bugs": {
		"url": "https://github.com/ThalesGroup/xsmp-modeler-core/issues"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:xsmpcat",
		"onCommand:xsmp.wizard.xsmp-sdk"
	],
	"main": "target/extension",
	"contributes": {
		"languages": [
			{
				"id": "xsmpcat",
				"aliases": [
					"xsmpcat"
				],
				"extensions": [
					".xsmpcat"
				],
				"configuration": "./xsmp.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "xsmpcat",
				"scopeName": "source.xsmpcat",
				"path": "./syntaxes/xsmp.tmLanguage.json"
			}
		],
		"customEditors": [
			{
				"viewType": "xsmp.settingsEditor",
				"displayName": "Xsmp settings",
				"selector": [
					{
						"filenamePattern": "**/.xsmp/settings.json"
					}
				],
				"priority": "default"
			}
		],
		"commands": [
			{
				"command": "xsmp.import.smpcat.proxy",
				"category": "Xsmp",
				"title": "Convert smpcat file to xsmpcat"
			},
			{
				"command": "xsmp.generator.smp.proxy",
				"category": "Xsmp",
				"title": "Generate SMP models."
			},
			{
				"command": "xsmp.generator.python.proxy",
				"category": "Xsmp",
				"title": "Generate python files."
			},
			{
				"command": "xsmp.generator.xsmp-sdk.proxy",
				"category": "Xsmp",
				"title": "Generate xsmp-sdk C++ files."
			},
			{
				"command": "xsmp.generator.esa-cdk.proxy",
				"category": "Xsmp",
				"title": "Generate esa-cdk C++ files."
			},
			{
				"command": "xsmp.wizard.xsmp-sdk",
				"category": "Xsmp",
				"title": "Create new xsmp-sdk project"
			},
			{
				"category": "Xsmp",
				"command": "xsmp.openSettingsEditor",
				"title": "Open Settings (UI)"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "xsmp.import.smpcat.proxy",
					"when": "resourceFilename =~ /\\b\\.smpcat\\b/"
				},
				{
					"command": "xsmp.generator.smp.proxy",
					"when": "editorLangId == xsmpcat"
				},
				{
					"command": "xsmp.generator.python.proxy",
					"when": "editorLangId == xsmpcat"
				},
				{
					"command": "xsmp.generator.xsmp-sdk.proxy",
					"when": "editorLangId == xsmpcat"
				},
				{
					"command": "xsmp.generator.esa-cdk.proxy",
					"when": "editorLangId == xsmpcat"
				}
			]
		},
		"configuration": [
			{
				"type": "object",
				"title": "Xsmp",
				"properties": {
					"xsmp.javaPath": {
						"type": "string",
						"scope": "machine",
						"description": "Java executable path."
					},
					"xsmp.build.automatically": {
						"type": "boolean",
						"default": "true",
						"description": "Build automatically."
					},
					"xsmp.profile": {
						"type": "string",
						"scope": "resource",
						"enum": [
							"esa-cdk",
							"xsmp-sdk"
						],
						"default": "xsmp-sdk",
						"description": "Select the Profile:"
					},
					"xsmp.tool.smp": {
						"type": "boolean",
						"scope": "resource",
						"default": true,
						"description": "Enable/Disable SMP model generator."
					},
					"xsmp.tool.python": {
						"type": "boolean",
						"scope": "resource",
						"default": false,
						"description": "Enable/Disable Python generator."
					},
					"xsmp.dependencies": {
						"type": "array",
						"scope": "resource",
						"item": "string",
						"default": [
							"ecss_smp"
						],
						"description": "Project dependencies:"
					},
					"xsmp.source.folders": {
						"type": "array",
						"scope": "resource",
						"item": "string",
						"default": [
							"smdl"
						],
						"description": "Project relative source folders:"
					}
				}
			}
		]
	},
	"devDependencies": {
		"@iconify/vue": "^4.1.1",
		"@types/fs-extra": "^11.0.2",
		"@types/node": "^17.0.34",
		"@types/vscode": "^1.67.0",
		"@vscode/test-electron": "^2.1.3",
		"bulma": "^0.9.4",
		"css-loader": "^6.8.1",
		"esbuild": "^0.19.5",
		"html-webpack-plugin": "^5.5.3",
		"node-sass": "^9.0.0",
		"sass": "^1.69.0",
		"sass-loader": "^13.3.2",
		"tslint-webpack-plugin": "^2.1.1",
		"typescript": "^4.6.4",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"fs-extra": "^11.1.1",
		"os-browserify": "^0.3.0",
		"path-browserify": "^1.0.1",
		"vscode-languageclient": "^8.0.1",
		"vue": "^3.3.4",
		"vue-loader": "^17.3.0",
		"vue-style-loader": "^4.1.3",
		"vuex": "^4.0.2"
	},
	"scripts": {
		"build": "webpack --mode production",
		"vscode:prepublish": "npm run build && npm run compile",
		"compile": "tsc -p ./src",
		"watch": "tsc -w -p ./src",
		"update-vscode": "node ./node_modules/vscode/bin/install"
	},
	"alias": {
		"vue": "./node_modules/vue/dist/vue.global.js"
	}
}
